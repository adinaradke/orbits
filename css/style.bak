/* Orbit sizes */
#navitem--sub--1.orbit, #navitem--sub--1.orbittwo {
  width: 12em;
  height: 12em;
  margin-top: -6em;
  margin-left: -6em;
}

#navitem--sub--2.orbit, #navitem--sub--2.orbittwo {
  width: 18em;
  height: 18em;
  margin-top: -9em;
  margin-left: -9em;
}

#navitem--sub--3.orbit, #navitem--sub--3.orbittwo {
  width: 24em;
  height: 24em;
  margin-top: -12em;
  margin-left: -12em;
}

#navitem--sub--4.orbit, #navitem--sub--4.orbittwo {
  width: 30em;
  height: 30em;
  margin-top: -15em;
  margin-left: -15em;
}

#navitem--sub--5.orbit, #navitem--sub--5.orbittwo {
  width: 36em;
  height: 36em;
  margin-top: -18em;
  margin-left: -18em;
}

